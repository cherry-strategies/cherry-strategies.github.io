---
import CommonHead from "../components/CommonHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <CommonHead title={title} description={description} />
  </head>
  <body class="font-text">
    <a href="#content" hidden aria-hidden="false">Skip to content</a>
    <div class="stack">
      <Header title={title} />
      <main id="content" class="[ site-content ] [ container ]" role="main">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
